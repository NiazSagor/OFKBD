<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ProgressFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="270dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_progress_top" />


        <View
            android:layout_width="160dp"
            android:layout_height="600dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="90dp"
            android:background="@drawable/ic_progress_side" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xxhdpi_heading_top_margin"
                android:fontFamily="@font/solaimanlipi"
                android:padding="16dp"
                android:text="@string/progress"
                android:textColor="@color/textColorGrey"
                android:textSize="@dimen/hdpi_heading_text_size"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/currentBadgeImageViewTop"
                            android:layout_width="48dp"
                            android:layout_height="48dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="8dp"
                                android:paddingEnd="0dp"
                                android:text="Current Level :"
                                android:textColor="@android:color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/currentLevelTextViewTop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Iron 1"
                                android:textColor="@color/progressCyan"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <com.kofigyan.stateprogressbar.StateProgressBar
                            android:id="@+id/your_state_progress_bar_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            app:spb_animateToCurrentProgressState="true"
                            app:spb_checkStateCompleted="true"
                            app:spb_currentStateDescriptionColor="#009688"
                            app:spb_descriptionTopSpaceIncrementer="16dp"
                            app:spb_maxDescriptionLines="3"
                            app:spb_maxStateNumber="five"
                            app:spb_stateBackgroundColor="@color/lightgrey"
                            app:spb_stateDescriptionColor="@android:color/darker_gray"
                            app:spb_stateDescriptionSize="12sp"
                            app:spb_stateForegroundColor="@color/progressCyan"
                            app:spb_stateLineThickness="2dp"
                            app:spb_stateNumberBackgroundColor="#808080"
                            app:spb_stateNumberForegroundColor="#eeeeee" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/badge_png" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/courseProgressTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/solaimanlipi"
                        android:paddingStart="16dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/subProgress"
                        android:textColor="@color/textColorGrey"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/subjectProgressRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:paddingTop="8dp"
                        android:paddingBottom="16dp" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>